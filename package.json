{
  "name": "institutional-website",
  "version": "1.0.0",
  "description": "Institutional website with a student/teacher/parent portal, academic details, and batch unions.",
  "main": "index.html",
  "scripts": {
    "start": "live-server --open", 
    "build": "npm run compile-css",
    "compile-css": "node-sass --output-style compressed --include-path ./node_modules/ --source-map true src/styles.scss dist/styles.css",
    "watch-css": "node-sass --watch --output-style compressed src/styles.scss dist/styles.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "institutional",
    "website",
    "portal",
    "batch unions"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^5.3.0-alpha1",
    "jquery": "^3.6.0",
    "font-awesome": "^5.15.3",
    "axios": "^1.3.0"
  },
  "devDependencies": {
    "node-sass": "^7.0.1",
    "live-server": "^1.2.1"
  }
}
